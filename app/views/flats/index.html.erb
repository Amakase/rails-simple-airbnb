<h1>All our Flats (<%= Flat.count %>)</h1>
<% @flats.each do |flat| %>
  <div class="card" >
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.description %></p>
      <%= link_to "More info", flat_path(flat), class: "card-link" %>
      <%= link_to "Edit", edit_flat_path(flat), class: "card-link" %>
      <%= link_to "Remove", flat_path(flat), class: "card-link", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
<% end %>
